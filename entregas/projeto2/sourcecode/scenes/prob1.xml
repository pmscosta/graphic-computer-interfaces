<yas>
    <scene root="scene" axis_length="5"/>
    <views default="far_view">
        <perspective id="far_view" near="0.1" far="500" angle="45">
            <from x="7" y="6" z="17"/>
            <to x="1" y="0" z="1"/>
        </perspective>
    </views>

    <ambient>
        <ambient r="0" g="0" b="0" a="1"/>
        <background r="0.53" g="0.81" b="0.92" a="1" />
    </ambient>

    <lights>
        <omni id="sun" enabled="1">
            <location x="5" y="20" z="5" w="0" />
            <ambient r="0.63" g="0.63" b="0.63" a="1"/>
            <diffuse r="0.63" g="0.63" b="0.63" a="1"/>
            <specular r="0.63" g="0.63" b="0.63" a="1"/>
        </omni>

    </lights>

    <textures>
        <texture id="vidral" file="scenes/images/letter.png"/>
    </textures>

    <materials>
        <material id="m1" shininess="0.1">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="0.3" g="0.3" b="0.3" a="1"/>
            <diffuse r="0.8" g="0.8" b="0.8" a="1"/>
            <specular r="0.1" g="0.1" b="0.1" a="1"/>
        </material>
    </materials>

    <transformations >
        <transformation id="floor_trans">
            <translate x="0" y="0" z="8"/>
            <rotate axis="x" angle="-90"/>
            <scale x="8" y="8" z="1"/>
        </transformation>
    </transformations>


    <animations>

        <linear id="l1" span="2">
            <controlpoint xx="0" yy="2" zz="1"/>
            <controlpoint xx="0" yy="4" zz="4"/>
            <controlpoint xx="0" yy="3" zz="8"/>
        </linear>

        <linear2 id="l2" span="10" rotation="720">
             <controlpoint xx="0" yy="0" zz="0" />
             <controlpoint xx="10" yy="0" zz="0" />
             <controlpoint xx="10" yy="0" zz="10" />
             <controlpoint xx="0" yy="10" zz="0" />
             <controlpoint xx="0" yy="0" zz="0" />
         </linear2>
    </animations>

    <primitives>

        <primitive id = "vehicle">
            <vehicle />
        </primitive>

        <primitive id="square">
            <square texAngle="30"/>
        </primitive>

        <primitive id = "leaf">
            <patch npointsU="6" npointsV="2" npartsU="10" npartsV="15">
                
                <controlpoint xx="-0.5" yy="0" zz="1"/>
                <controlpoint xx="-0.5" yy="0" zz="0"/>

                <controlpoint xx="-0.5" yy="1" zz="1"/>
                <controlpoint xx="-0.5" yy="1" zz="0"/>

                <controlpoint xx="0" yy="1" zz="2"/>
                <controlpoint xx="0" yy="1" zz="1"/>

                <controlpoint xx="0" yy="0" zz="2"/>
                <controlpoint xx="0" yy="0" zz="1"/>

                <controlpoint xx="0.5" yy="-1" zz="1"/>
                <controlpoint xx="0.5" yy="-1" zz="0"/>

                <controlpoint xx="0.5" yy="1" zz="1"/>
                <controlpoint xx="0.5" yy="1" zz="0"/>

            </patch>
        </primitive>
    </primitives>

    <components>
        <component id="scene">

            <transformation>
            </transformation>x

            <materials>
                <material id ="m1"/>
            </materials>

            <texture id="vidral" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="square"/>
            </children>
        </component>
    </components>
</yas>