<yas>
    <scene root="scene" axis_length="5"/>
    <views default="far_view">
        <perspective id="far_view" near="0.1" far="500" angle="45">
            <from x="7" y="6" z="17"/>
            <to x="1" y="0" z="1"/>
        </perspective>
    </views>

    <ambient>
        <ambient r="0" g="0" b="0" a="1"/>
        <background r="0.53" g="0.81" b="0.92" a="1" />
    </ambient>

    <lights>
        <omni id="sun" enabled="1">
            <location x="5" y="20" z="5" w="0" />
            <ambient r="0.63" g="0.63" b="0.63" a="1"/>
            <diffuse r="0.63" g="0.63" b="0.63" a="1"/>
            <specular r="0.63" g="0.63" b="0.63" a="1"/>
        </omni>

    </lights>

    <textures>
        <texture id="s_alturas" file="scenes/images/s_alturas.jpg"/>
        <texture id="s_mascara" file="scenes/images/s_mascara.jpg"/>
        <texture id="s_textura" file="scenes/images/s_textura.jpg"/>
    </textures>

    <materials>
    <material id="m1" shininess="0.1">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="0.3" g="0.3" b="0.3" a="1"/>
            <diffuse r="0.8" g="0.8" b="0.8" a="1"/>
            <specular r="0.1" g="0.1" b="0.1" a="1"/>
        </material>
    </materials>

    <transformations >
        <transformation id="floor_trans">
            <translate x="0" y="0" z="8"/>
            <rotate axis="x" angle="-90"/>
            <scale x="8" y="8" z="1"/>
        </transformation>
    </transformations>


    <animations>
    </animations>

    <primitives>
        <primitive id = "terrain">
            <terrain idtexture="s_textura" idheightmap="s_alturas" mask="s_mascara" parts="50" heightscale="0.2"/>
        </primitive>
        <primitive id = "diam">
            <diamond slices="10"/>
        </primitive>
    </primitives>

    <components>
        <component id="scene">

            <transformation>
            </transformation>

            <materials>
                <material id ="m1"/>
            </materials>

            <texture id="none"/>

            <children>
                <primitiveref id="diam"/>
            </children>
        </component>
    </components>
</yas>