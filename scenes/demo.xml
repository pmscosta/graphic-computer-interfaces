<yas>
    <scene root="cube" axis_length="5"/>
    <views default="c1">
        <perspective id="c1" near="0.1" far="500" angle="0.4">
            <from x="15" y="15" z="15"/>
            <to x="0" y="0" z="0"/>
        </perspective>
    </views>

    <ambient>
        <ambient r="0" g="0" b="0" a="1"/>
        <background r="0" g="0" b="0" a="1" />
    </ambient>

    <lights>
        <omni id="g_light" enabled="1">
            <location x="3" y="1" z="6" w="1" />
            <ambient r="0" g="0" b="0" a="1"/>
            <diffuse r="1" g="1" b="1" a="1"/>
            <specular r="1" g="1" b="1" a="1"/>
        </omni>

        <spot id="s_light" enabled="1" angle="30" exponent="1">
            <location x="5" y="0" z="0" w="0" />
            <target x="5" y="5" z="5" />
            <ambient r="0" g="0" b="0" a="1"/>
            <diffuse r="1" g="1" b="1" a="1"/>
            <specular r="1" g="1" b="1" a="1"/>
        </spot>

    </lights>

    <textures>
        <texture id="trunk" file="/scenes/images/trunk-image.jpg"/>                      
    </textures>

    <materials>
        <material id="m1" shininess="0.5">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="0" g="0" b="0" a="0"/>
            <diffuse r="0" g="0" b="0" a="0"/>
            <specular r="0" g="0" b="0" a="0"/>
        </material>
    </materials>


    <transformations >
        <transformation id="t1">
            <translate x="0" y="0" z="0"/>
            <rotate axis="x" angle="90" />
            <scale x="1" y="1" z="1"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="square">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="triangle">
            <triangle x1="1" y1="0" z1="0"
                    x2="-0.5" y2="0.866" z2="0"
                    x3="-0.5" y3="-0.866" z3="0"/>
        </primitive>

        <primitive id="sphere">
            <sphere radius="1" slices="20" stacks="20"/>
        </primitive>

        <primitive id="cylinder">
            <cylinder base="1" top="1" height="5" slices="250" stacks="250"/>
        </primitive>

        <primitive id="torus">
            <torus inner="2" outer="0.5" slices="100" loops="300"/>
        </primitive>

    </primitives>

    <components>

        <component id="frontal_face">
            <transformation>
                <translate x="0" y="0" z="0.5"/>
            </transformation>

            <materials>
                <material id ="m1"/>
            </materials>

            <texture id="trunk" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="square"/>
            </children>
        </component>

        <component id="back_face">
            <transformation>
                <rotate axis="x" angle="180"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>

            <materials>
                <material id ="m1"/>
            </materials>

            <texture id="trunk" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="square"/>
            </children>

        </component>

        <component id="top_face">
            <transformation>
                <rotate axis="x" angle="-90"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>

            <materials>
                <material id ="m1"/>
            </materials>

            <texture id="trunk" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="square"/>
            </children>
        </component>

        <component id="bottom_face">
            <transformation>
                <rotate axis="x" angle="90"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>

            <materials>
                <material id ="m1"/>
            </materials>

            <texture id="trunk" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="square"/>
            </children>
        </component>

        <component id="right_face">
            <transformation>
                 <rotate axis="y" angle="90"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>

            <materials>
                <material id ="m1"/>
            </materials>

            <texture id="trunk" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="square"/>
            </children>
        </component>


        <component id="left_face">
            <transformation>
                <rotate axis="y" angle="-90"/>
                <translate x="0" y="0" z="0.5"/>
            </transformation>

            <materials>
                <material id ="m1"/>
            </materials>

            <texture id="trunk" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="square"/>
            </children>
        </component>

        <component id="cube">
            <transformation>
                <translate x="3" y="2" z="3"/>
            </transformation>

            <materials>
                <material id ="m1"/>
            </materials>

            <texture id="trunk" length_s="1" length_t="1"/>

            <children>
                <componentref id="frontal_face"/>
                <componentref id="back_face"/>
                <componentref id="bottom_face"/>
                <componentref id="left_face"/>
                <componentref id="right_face"/>
                <componentref id="top_face"/>
            </children>
        </component>

    </components>

    
</yas>