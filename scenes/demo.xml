<yas>
    <scene root="root" axis_length="5"/>
    <views default="c1">
        <perspective id="c1" near="0.1" far="500" angle="0">
            <from x="0" y="0" z="0"/>
            <to x="10" y="10" z="10"/>
        </perspective>
    </views>

    <ambient>
        <ambient r="0.3" g="0.3" b="0.3" a="1"/>
        <background r="0" g="0" b="0" a="1" />
    </ambient>

    <lights>
        <omni id="g_light" enabled="1">
            <location x="0" y="5" z="0" w="1" />
            <ambient r="0.3" g="0.3" b="0" a="1"/>
            <diffuse r="1" g="1" b="1" a="1"/>
            <specular r="1" g="1" b="1" a="1"/>
        </omni>

        <spot id="s_light" enabled="1" angle="30" exponent="1">
            <location x="5" y="20" z="30" w="0" />
            <target x="5" y="5" z="5" />
            <ambient r="0" g="0.3" b="0.3" a="1"/>
            <diffuse r="1" g="1" b="1" a="1"/>
            <specular r="1" g="1" b="1" a="1"/>
        </spot>

    </lights>

    <textures>
        <texture id="trunk" file="images/trunk-image.jpg"/>                      
    </textures>

    <materials>
        <material id="m1" shininess="0.5">
            <emission r="0" g="0" b="0" a="0"/>
            <ambient r="0.3" g="0.3" b="0.5" a="0"/>
            <diffuse r="0.5" g="0.5" b="0.5" a="0"/>
            <specular r="0.1" g="0.1" b="0.1" a="0"/>
        </material>
    </materials>


    <transformations >
        <transformation id="t1">
            <translate x="0" y="0" z="0"/>
            <rotate axis="x" angle="90" />
            <scale x="1" y="1" z="1"/>
        </transformation>
    </transformations>

    <primitives>
        <primitive id="square">
            <rectangle x1="-0.5" y1="-0.5" x2="0.5" y2="0.5" />
        </primitive>

        <primitive id="triangle">
            <triangle x1="1" y1="0" z1="0"
                    x2="-0.5" y2="0.866" z2="0"
                    x3="-0.5" y3="-0.866" z3="0"/>
        </primitive>

        <primitive id="sphere">
            <sphere radius="1" slices="20" stacks="20"/>
        </primitive>

        <primitive id="cylinder">
            <cylinder base="1" top="1" height="5" slices="20" stacks="10"/>
        </primitive>

        <primitive id="torus">
            <torus inner="3" outer="1" slices="20" loops="50"/>
        </primitive>

    </primitives>

    <components>

        <component id="cube">
            <transformation>
            </transformation>

            <materials>
                <material id ="m1"/>
            </materials>

            <texture id="trunk" length_s="1" length_t="1"/>

            <children>
                <primitiveref id="square"/>
            </children>
        </component>
    </components>

    
</yas>